<a class="glyphicon glyphicon-comment pull-right" data-toggle="collapse" data-parent=".form-projectowner" href="#estimation_{:id}"></a>
<div style="padding-top:10px" id="estimation_{:id}" data-estimation="{:id}" data-iteration="{:iteration_id}" class="panel-collapse collapse">
  <div class="form-horizontal" role="form">
    <div class="form-group">
      <label class="col-sm-3 control-label">Comment</label>
      <div class="col-sm-9">
        <textarea class="form-control message" rows="3">{:message}</textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <button class="btn btn-primary" onclick="save_comment(this);">Create Comment</button>
      </div>
    </div>
  </div>
</div>