<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Project</th>
      <th>Prev package</th>
      <th>Employee</th>
      <th>Risk</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.title %></td>
        <td><%= package.project %></td>
        <td><%= package.prev_package %></td>
        <td><%= package.employee %></td>
        <td><%= package.risk %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

