<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@project, @product_breakdown_structure], html: { class: 'form-horizontal' }) do |f| %>
      <% if @product_breakdown_structure.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product_breakdown_structure.errors.count, "error") %> prohibited this product_breakdown_structure from being saved:</h2>

          <ul>
          <% @product_breakdown_structure.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :name, {class: 'form-control', placeholder: 'Name'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :parent, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= select_tag :parent, options_from_collection_for_select(ProductBreakdownStructure.order_for_selects(params[:id]), "id", :name_for_selects) %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>